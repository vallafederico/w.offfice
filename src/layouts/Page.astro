---
import "../style/main.css";
import "../style/an.css";
const { title, route } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div data-wrap>
      <main data-route={route} data-scroll class="Main">
        <slot />
      </main>
    </div>

    <!-- Webgl -->
    <canvas data-gl="c"></canvas>
    <script>
      import "../js/app.js";
    </script>
  </body>
</html>
